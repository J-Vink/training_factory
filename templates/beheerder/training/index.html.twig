{% extends 'base.html.twig' %}

{% block title %}Training index{% endblock %}

{% block content %}
    <div class="container card-body">
        <h1>Training index</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Naam</th>
                <th>Description</th>
                <th>Duration</th>
                <th>Costs</th>
                <th>ImageFilename</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for training in trainings %}
                <tr>
                    <td>{{ training.id }}</td>
                    <td>{{ training.naam }}</td>
                    <td>{{ training.description }}</td>
                    <td>{{ training.duration }}</td>
                    <td>{{ training.costs }}</td>
                    <td>{{ training.imageFilename }}</td>
                    <td>
                        <a href="{{ path('admin_training_show', {'id': training.id}) }}">show</a>
                        <a href="{{ path('admin_training_edit', {'id': training.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('admin_training_new') }}">Create new</a>
    </div>
{% endblock %}
