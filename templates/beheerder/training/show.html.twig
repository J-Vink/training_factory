{% extends 'base.html.twig' %}

{% block title %}Training{% endblock %}

{% block content %}
    {{ parent() }}
    <div class="container card-body">
        <h1>Training</h1>

        <img src="img/uploads{{ asset(training.imageFilename) }}" alt="">
        
        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ training.id }}</td>
            </tr>
            <tr>
                <th>Naam</th>
                <td>{{ training.naam }}</td>
            </tr>
            <tr>
                <th>Beschrijving</th>
                <td>{{ training.description|markdown }}</td>
            </tr>
            <tr>
                <th>Duur (minuten)</th>
                <td>{{ training.duration }}</td>
            </tr>
            <tr>
                <th>Kosten</th>
                <td>{{ training.costs }}</td>
            </tr>
            <tr>
                <th>Afbeelding</th>
                <td>{{ training.imageFilename }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('admin_training_index') }}">Terug naar overzicht</a>

        <a href="{{ path('admin_training_edit', {'id': training.id}) }}">Bewerk</a>

        {{ include('beheerder/training/_delete_form.html.twig') }}
    </div>
{% endblock %}
