{% extends 'base.html.twig' %}

{% block title %}Lesson index{% endblock %}

{% block content %}
    {{ parent() }}
    <div class="container card-body">
        <h1>Lesson index</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>DateTime</th>
                <th>Location</th>
                <th>MaxPersons</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for lesson in lessons %}
                <tr>
                    <td>{{ lesson.id }}</td>
                    <td>{{ lesson.dateTime ? lesson.dateTime|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ lesson.location }}</td>
                    <td>{{ lesson.maxPersons }}</td>
                    <td>
                        <a href="{{ path('medewerker_lesson_show', {'id': lesson.id}) }}">show</a>
                        <a href="{{ path('medewerker_lesson_edit', {'id': lesson.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('medewerker_lesson_new') }}">Create new</a>
    </div>
{% endblock %}
