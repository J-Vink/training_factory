{% extends 'base.html.twig' %}

{% block title %}Lesson{% endblock %}

{% block content %}
    {{ parent() }}
    <div class="container card-body">
        <h1>Les</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>ID</th>
                <td>{{ lesson.id }}</td>
            </tr>
            <tr>
                <th>Datum en tijd</th>
                <td>{{ lesson.dateTime ? lesson.dateTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Locatie</th>
                <td>{{ lesson.location }}</td>
            </tr>
            <tr>
                <th>Maximaal aantal personen</th>
                <td>{{ lesson.maxPersons }}</td>
            </tr>
            </tbody>
        </table>

        <h3>Deelnemers:</h3>
        {% for registration in registrations %}
            {{ registration.getMember.getFirstname() }} {{ registration.getMember.getPrePosition() }} {{ registration.getMember.getLastname() }}
            <hr>
        {% endfor %}

        <a href="{{ path('medewerker_lesson_index') }}">back to list</a>

        <a href="{{ path('medewerker_lesson_edit', {'id': lesson.id}) }}">edit</a>

        {{ include('medewerker/lesson/_delete_form.html.twig') }}
    </div>
{% endblock %}
